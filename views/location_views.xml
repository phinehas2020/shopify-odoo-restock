<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_shopify_restock_location_tree" model="ir.ui.view">
    <field name="name">shopify.restock.location.tree</field>
    <field name="model">shopify.restock.location</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="location_id_global"/>
        <field name="location_id_numeric"/>
        <field name="odoo_location_id"/>
        <field name="active"/>
      </list>
    </field>
  </record>

  <record id="view_shopify_restock_location_form" model="ir.ui.view">
    <field name="name">shopify.restock.location.form</field>
    <field name="model">shopify.restock.location</field>
    <field name="arch" type="xml">
      <form string="Shopify Location">
        <sheet>
          <group>
            <field name="name"/>
            <field name="location_id_global"/>
            <field name="location_id_numeric"/>
            <field name="active"/>
          </group>
          <group string="Odoo Inventory">
            <field name="odoo_location_id"/>
          </group>
          <group string="Webhook">
            <field name="webhook_enabled"/>
            <field name="webhook_url"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_open_shopify_restock_locations" model="ir.actions.act_window">
    <field name="name">Shopify Locations</field>
    <field name="res_model">shopify.restock.location</field>
    <field name="view_mode">list,form</field>
  </record>
</odoo>
